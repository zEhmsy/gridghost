<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DeviceSim.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="DeviceSim.App.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="GridGhost"
        Icon="avares://DeviceSim.App/Assets/Icons/gridghost_icon.ico">

    <Grid ColumnDefinitions="200,*">
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1e1e1e" BorderBrush="#333" BorderThickness="0,0,1,0">
            <DockPanel Margin="10">
                <StackPanel DockPanel.Dock="Top" Spacing="5">
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,25">
                        <Image Source="avares://DeviceSim.App/Assets/Icons/gridghost_icon.png" Width="36" Height="36"/>
                        <TextBlock Text="GridGhost" Foreground="White" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Devices" 
                            HorizontalAlignment="Stretch" Content="Devices" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Points" 
                            HorizontalAlignment="Stretch" Content="Points" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="PointMap" 
                            HorizontalAlignment="Stretch" Content="Point Map (Niagara)" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#44FF44" FontWeight="Bold" BorderThickness="0"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Templates" 
                            HorizontalAlignment="Stretch" Content="Templates" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Logs" 
                            HorizontalAlignment="Stretch" Content="Logs" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                </StackPanel>
                
                <Button DockPanel.Dock="Bottom" Command="{Binding OpenDonationCommand}" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                        Background="#FFDD00" Foreground="Black" Height="45"
                        CornerRadius="8" Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="â˜•" FontSize="16"/>
                        <TextBlock Text="Buy me a coffee" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="10"/>

        <!-- Intercept Dialog Overlay for Unsaved Changes -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Background="#80000000" IsVisible="{Binding IsConfirmNavigateVisible}" ZIndex="100">
            <Border Background="#2a2a2a" Width="400" Height="200" CornerRadius="8" BorderBrush="#555" BorderThickness="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
                <StackPanel VerticalAlignment="Center" Spacing="20">
                    <TextBlock Text="Unsaved Changes" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="You have unsaved changes in the current view. How would you like to proceed?" 
                               TextWrapping="Wrap" Foreground="#ccc" TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0">
                        <Button Content="Save" Command="{Binding ConfirmNavigateSaveCommand}" Width="100" HorizontalContentAlignment="Center" Background="#44ff44" Foreground="Black" FontWeight="Bold"/>
                        <Button Content="Discard" Command="{Binding ConfirmNavigateDiscardCommand}" Width="100" HorizontalContentAlignment="Center" Background="#ff4444" Foreground="White"/>
                        <Button Content="Cancel" Command="{Binding ConfirmNavigateCancelCommand}" Width="100" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Error Dialog Overlay -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Background="#80000000" IsVisible="{Binding IsErrorDialogVisible}" ZIndex="200">
            <Border Background="#2a2a2a" Width="450" MinHeight="180" CornerRadius="8" BorderBrush="#dd3333" BorderThickness="2"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
                <StackPanel VerticalAlignment="Center" Spacing="20">
                    <TextBlock Text="{Binding ErrorDialogTitle}" FontSize="20" FontWeight="Bold" Foreground="#ff4444" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ErrorDialogMessage}" 
                               TextWrapping="Wrap" Foreground="#ccc" TextAlignment="Center"/>
                    <Button Content="Dismiss" Command="{Binding CloseErrorDialogCommand}" Width="100" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>

</Window>
