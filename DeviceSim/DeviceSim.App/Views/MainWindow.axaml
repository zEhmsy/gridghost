<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DeviceSim.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="DeviceSim.App.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="GridGhost"
        Icon="avares://DeviceSim.App/Assets/Icons/gridghost_icon.ico">

    <Grid ColumnDefinitions="200,*">
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1e1e1e" BorderBrush="#333" BorderThickness="0,0,1,0">
            <DockPanel Margin="10">
                <StackPanel DockPanel.Dock="Top" Spacing="5">
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,25">
                        <Image Source="avares://DeviceSim.App/Assets/Icons/gridghost_icon.png" Width="36" Height="36"/>
                        <TextBlock Text="GridGhost" Foreground="White" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Devices" 
                            HorizontalAlignment="Stretch" Content="Devices" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Points" 
                            HorizontalAlignment="Stretch" Content="Points" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Templates" 
                            HorizontalAlignment="Stretch" Content="Templates" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Logs" 
                            HorizontalAlignment="Stretch" Content="Logs" 
                            Height="40" VerticalContentAlignment="Center"
                            Background="Transparent" Foreground="#ccc" BorderThickness="0"/>
                </StackPanel>
                
                <Button DockPanel.Dock="Bottom" Command="{Binding OpenDonationCommand}" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                        Background="#FFDD00" Foreground="Black" Height="45"
                        CornerRadius="8" Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="â˜•" FontSize="16"/>
                        <TextBlock Text="Buy me a coffee" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="10"/>
    </Grid>

</Window>
