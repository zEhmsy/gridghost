<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DeviceSim.App.ViewModels"
             x:Class="DeviceSim.App.Views.DevicesView"
             x:DataType="vm:DevicesViewModel">

    <DockPanel>
        <TextBlock Text="Devices Instance Manager" DockPanel.Dock="Top" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <DataGrid ItemsSource="{Binding Devices}" AutoGenerateColumns="False" GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray" CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Name" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" Margin="5,0">
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                <Button Content="âœï¸" ToolTip.Tip="Edit points" Command="{Binding OpenPointsCommand}" Background="Transparent" BorderThickness="0" Padding="2" Margin="5,0,0,0"/>
                                <Button Content="ðŸ—ºï¸" ToolTip.Tip="Open Niagara map" Command="{Binding OpenPointMapCommand}" Background="Transparent" BorderThickness="0" Padding="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" IsReadOnly="True" Width="80"/>
                <DataGridTextColumn Header="Port" Binding="{Binding Port, Mode=TwoWay}" Width="60"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" IsReadOnly="True" Width="80"/>
                <DataGridTemplateColumn Header="Enabled" Width="80" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Enabled, Mode=OneWay}" Command="{Binding ToggleCommand}" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Last Error" Binding="{Binding LastError}" IsReadOnly="True" Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                     <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Remove" Command="{Binding $parent[UserControl].((vm:DevicesViewModel)DataContext).RemoveCommand}" CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
