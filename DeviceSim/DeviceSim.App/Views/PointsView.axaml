<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DeviceSim.App.ViewModels"
             xmlns:conv="using:DeviceSim.App.Converters"
             x:Class="DeviceSim.App.Views.PointsView"
             x:DataType="vm:PointsViewModel">

    <UserControl.Resources>
        <conv:TypeVisibilityConverter x:Key="TypeToBoolConverter"/>
    </UserControl.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <TextBlock Text="Points Monitor" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}"/>
            <Button Content="Save" Command="{Binding SaveCommand}" IsEnabled="{Binding IsDirty}" Background="#44ff44" Foreground="Black" FontWeight="Bold"/>
            <TextBlock Text="Unsaved changes" IsVisible="{Binding IsDirty}" Foreground="#ffaa00" VerticalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic"/>
        </StackPanel>

        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DeviceGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}" Margin="0,5,0,5" HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DeviceName}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Port, StringFormat='Port: {0}'}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Status, StringFormat='Status: {0}'}" VerticalAlignment="Center"/>
                                    <TextBlock Text="Running/Enabled:" VerticalAlignment="Center"/>
                                    <CheckBox IsChecked="{Binding Enabled, Mode=OneWay}" Command="{Binding ToggleCommand}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Expander.Header>

                            <DataGrid ItemsSource="{Binding Points}" AutoGenerateColumns="False" IsReadOnly="True" GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray" CanUserResizeColumns="True" MaxHeight="600">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Key" Binding="{Binding Key}" IsReadOnly="True" Width="150"/>
                <DataGridTemplateColumn Header="Type" Width="100">
                     <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                             <ComboBox ItemsSource="{Binding AvailableTypes}" SelectedItem="{Binding Type, Mode=TwoWay}" 
                                       IsEnabled="{Binding IsEditingAllowed}"
                                       HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="Gen Type" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                         <DataTemplate>
                              <ComboBox ItemsSource="{Binding AvailableGenTypes}" SelectedItem="{Binding GenType, Mode=TwoWay}" 
                                        IsEnabled="{Binding IsEditingAllowed}"
                                        HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent"/>
                         </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Min" Width="60">
                     <DataGridTemplateColumn.CellTemplate>
                          <DataTemplate>
                               <TextBox Text="{Binding GenMin, Mode=TwoWay}" IsEnabled="{Binding IsEditingAllowed}" BorderThickness="0" Background="Transparent"/>
                          </DataTemplate>
                     </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Max" Width="60">
                     <DataGridTemplateColumn.CellTemplate>
                          <DataTemplate>
                               <TextBox Text="{Binding GenMax, Mode=TwoWay}" IsEnabled="{Binding IsEditingAllowed}" BorderThickness="0" Background="Transparent"/>
                          </DataTemplate>
                     </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Period (s)" Width="80">
                      <DataGridTemplateColumn.CellTemplate>
                           <DataTemplate>
                                <TextBox Text="{Binding GenPeriod, Mode=TwoWay}" IsEnabled="{Binding IsEditingAllowed}" BorderThickness="0" Background="Transparent"/>
                           </DataTemplate>
                      </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Value" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                         <DataTemplate>
                              <DockPanel>
                                      <!-- Set/Commit Button -->
                                      <Button DockPanel.Dock="Right" Content="Set" Command="{Binding SetValueCommand}" 
                                              CommandParameter="{Binding #ValInput.Text}" Margin="5,0,0,0"
                                              IsEnabled="{Binding IsEditingAllowed}"
                                              IsVisible="{Binding Type, Converter={StaticResource TypeToBoolConverter}, ConverterParameter='!bool', FallbackValue=True}"/>
                                      
                                      <Button DockPanel.Dock="Right" Content="Set" Command="{Binding SetValueCommand}" 
                                              CommandParameter="{Binding $self.IsEffectivelyEnabled}" Margin="5,0,0,0"
                                              IsEnabled="{Binding IsEditingAllowed}"
                                              IsVisible="{Binding Type, Converter={StaticResource TypeToBoolConverter}, ConverterParameter='bool', FallbackValue=False}"/>

                                      <Panel>
                                              <!-- Text Input for Numbers -->
                                              <TextBox Name="ValInput" Text="{Binding Value, Mode=OneWay}" MinWidth="80"
                                                       IsEnabled="{Binding IsEditingAllowed}"
                                                       IsVisible="{Binding Type, Converter={StaticResource TypeToBoolConverter}, ConverterParameter='!bool'}"/>
                                              
                                              <!-- CheckBox for Booleans -->
                                              <CheckBox IsChecked="{Binding Value, Mode=OneWay}" 
                                                        Command="{Binding SetValueCommand}"
                                                        CommandParameter="{Binding $self.IsChecked}"
                                                        IsEnabled="{Binding IsEditingAllowed}"
                                                        IsVisible="{Binding Type, Converter={StaticResource TypeToBoolConverter}, ConverterParameter='bool'}"/>
                                      </Panel>
                              </DockPanel>
                         </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="100"/>
                <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
